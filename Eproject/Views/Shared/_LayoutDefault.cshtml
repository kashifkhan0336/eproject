                    <li class="mb-2"><a asp-controller="Faq" asp-area="User" asp-action="Index">FAQ</a></li>
                    <li class="mb-2"><a asp-controller="Support" asp-area="User" asp-action="Index">Support</a></li>
                    <li class="mb-2">
