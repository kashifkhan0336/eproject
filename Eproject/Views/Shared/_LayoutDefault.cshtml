            </ul>
        </div>
        <div class="navbar-end gap-2">
            @if (User.Identity.IsAuthenticated)
            {
                    EprojectUser user = await _userManager.FindByNameAsync(User.Identity.Name);
                <details class="dropdown hidden sm:flex">
                    <summary class="w-12 m-1 btn">
                            @user.Name
