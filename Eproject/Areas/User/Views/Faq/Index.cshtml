@{
    Layout = "_LayoutDefault";
}
<div class="px-2 container mx-auto max-w-[1280px] text-center">
    <h1 class="text-center font-bold text-2xl md:text-3xl lg:text-4xl xl:text-5xl my-10">
        Frequently Asked Questions
    </h1>
    <div>
        @foreach (var faqEntry in Model)
        {
            <div class="collapse collapse-arrow bg-base-200 mb-3">
                <input type="radio" name="my-accordion-2" />
                <div class="collapse-title text-xl font-medium">
                    @faqEntry.Question
                </div>
                <div class="collapse-content">
                    <p>
                        @faqEntry.Answer
                    </p>
                </div>
            </div>
        }
    </div>
</div>